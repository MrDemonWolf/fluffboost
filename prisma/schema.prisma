generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

enum DiscordActivityType {
  Custom
  Listening
  Streaming
  Playing
}

model Guild {
  id                  String   @id @default(uuid())
  guildId             String   @unique
  motivationChannelId String?
  motivationTime      String   @default("0 8 * * *") // Default to 8 AM daily
  timezone            String   @default("America/Chicago") // IANA timezone identifier (CST)
  joinedAt            DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

model MotivationQuote {
  id        String   @id @default(uuid())
  quote     String
  author    String
  addedBy   String
  createdAt DateTime @default(now())
}

model SuggestionQuote {
  id        String   @id @default(uuid())
  quote     String
  author    String
  addedBy   String
  status    String   @default("pending")
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model DiscordActivity {
  id        String              @id @default(uuid())
  activity  String
  type      DiscordActivityType @default(Custom)
  url       String?
  createdAt DateTime            @default(now())
}
